<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DirectionPad">
        <attr name="deadZone" format="float"/>
        <attr name="buttonCenterDistance" format="float"/>
        <attr name="rightArrowDrawable" format="integer"/>
        <attr name="rightArrowPressedDrawable" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ActionButtons">
        <attr name="multipleInputs" format="boolean"/>
        <attr name="rows" format="integer"/>
        <attr name="cols" format="integer"/>
        <attr name="spacing" format="float"/>
        <attr name="rotateButtons" format="float"/>
        <attr name="labels" format="reference"/>
        <attr name="icons" format="reference"/>
    </declare-styleable>

    <declare-styleable name="TiltSensorView">
        <attr name="foregroundColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundSizeRatio" format="fraction"/>
        <attr name="foregroundSizeRatio" format="fraction"/>
    </declare-styleable>

    <declare-styleable name="SingleButton">
        <attr name="label" format="string"/>
    </declare-styleable>

</resources>
