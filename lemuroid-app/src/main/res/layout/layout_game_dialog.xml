<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/save_entry_slot1"
            layout="@layout/layout_game_dialog_save_entry"/>

        <include
            android:id="@+id/save_entry_slot2"
            layout="@layout/layout_game_dialog_save_entry"/>

        <include
            android:id="@+id/save_entry_slot3"
            layout="@layout/layout_game_dialog_save_entry"/>

        <include
            android:id="@+id/save_entry_slot4"
            layout="@layout/layout_game_dialog_save_entry"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_change_disk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DialogButton"
            android:text="@string/game_dialog_change_disk_button" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/grid_unit_2x"
            android:padding="@dimen/grid_unit_1x">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_entry_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_dialog_quit"
                android:layout_gravity="center_vertical|start"
                style="@style/DialogButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_entry_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_dialog_settings"
                android:layout_gravity="center"
                app:iconSize="0dp"
                style="@style/DialogButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_entry_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_dialog_restart"
                android:layout_gravity="center_vertical|end"
                style="@style/DialogButton"/>

        </FrameLayout>

    </LinearLayout>

</ScrollView>
